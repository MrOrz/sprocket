doctype html
html(ng-app="application")
  head
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible" content="IE=edge")
    script. document.write("<base href='" + location.pathname + "'>");
    title= pkg.name
    meta(name="description" content=pkg.description)
    meta(name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0")
    meta(property="og:type" content="website")
    meta(property="og:url" content="http://tc-spa-boilerplate.tomchentw.com")
    meta(property="og:title" content=pkg.name)
    meta(property="og:description" content=pkg.description)

    <!-- Place favicon.ico and apple-touch-icon(s) in the root directory -->

    != stylesheetLinkTag("application")
    script(type="text/javascript" src="//cdnjs.cloudflare.com/ajax/libs/modernizr/2.7.1/modernizr.min.js")
    != javascriptIncludeTag("application")
  body
    header.navbar.navbar-inverse.navbar-fixed-top(role="navigation")
      .container
        .navbar-header
          button.navbar-toggle(type="button" ng-click="isCollapse = !isCollapse")
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(ga href="/") Example
        nav.navbar-collapse(role="navigation" collapse="isCollapse")
          ul.nav.navbar-nav
            li
              a(href="/admin.html" target="_self") Admin
    .container
      .page-header
        h1 Example
        p Hello, sprocket!